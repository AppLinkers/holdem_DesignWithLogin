<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketUpload"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="15dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="티켓거래 글쓰기"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/upload_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="완료"
            android:textColor="#2196F3"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/openGallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/slider_round"
            android:gravity="center"
            android:layout_marginRight="15dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_camera"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/upload_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <EditText
            android:id="@+id/upload_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="티켓 이름"
            android:background="@null"
            android:paddingLeft="15dp"
            android:inputType="text"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <EditText
            android:id="@+id/upload_place"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="거래 선호 지역"
            android:background="@null"
            android:paddingLeft="15dp"
            android:inputType="text"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <EditText
            android:id="@+id/upload_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" 가격"
            android:background="@null"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:maxLength="20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000"/>

</LinearLayout>