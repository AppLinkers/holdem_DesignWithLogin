<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pub_poster"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#2C000000"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/pub_heart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_black"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/pub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Nine"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingBottom="3dp"/>
        <TextView
            android:id="@+id/pub_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매장 설명"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingBottom="3dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pub_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/pub_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="open"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pub_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게임"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>





